{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
     "fs:default",
     {
    "identifier": "fs:allow-exists",
    "allow": [
      { "path": "$AUDIO" },
      { "path": "$AUDIO/**/*" }
    ]
  },
  {
    "identifier": "fs:allow-mkdir",
    "allow": [
      { "path": "$AUDIO" },
      { "path": "$AUDIO/**/*" }
    ]
  },
  {
    "identifier": "fs:allow-read-dir",
    "allow": [
      { "path": "$AUDIO" },
      { "path": "$AUDIO/**/*" }
    ]
  }
]
}